{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    <div class="form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h3 class="h3 mb-3 font-weight-normal">Please sign in</h3>
        <div class="register__item" style="margin-top: 22px">
            <div class="register__item-label">
                <label for="inputEmail" class="sr-only">Email / Login</label>
            </div>
            <div class="register__item-widget">
                <input value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email / Login" required autofocus>
            </div>
        </div>
        <div class="register__item">
            <div class="register__item-label">
                <label for="inputPassword" class="sr-only">Password</label>
            </div>
            <div class="register__item-widget">
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
            <div class="checkbox mb-3" id="remember-me">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        <div class="form-but" style="margin-top: 2px">
            <button class="btn" >Sign in</button>
        </div>
    </div>
</form>
{% endblock %}
