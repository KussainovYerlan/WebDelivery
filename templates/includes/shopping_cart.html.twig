<div class="modal" role="dialog" id="shopping-cart">
    <div class="modal-dialog">
        <div class="modal-content" tabindex="-1">
            <div class="modal-header">
                <h5 class="modal-title">Корзина</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="shopping-cart_list">
            </div>
            <div class="modal-footer">
                <div class="pull-right">
                    Стоимость: <b id="shopping-cart_total">0.00</b> P
                </div>
                <button class="btn btn-success" id="shopping-cart_clear">Очистить корзину</button>
                <button class="btn btn-success" id="shopping-cart_send">Оформить заказ</button>
            </div>
        </div>
    </div>
</div>